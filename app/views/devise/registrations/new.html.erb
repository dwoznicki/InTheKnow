<div class="container">
<div class="center">

<h2>Sign up</h2><br>
<form class="pure-form pure-form-aligned">
  <fieldset>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, autofocus: true, :placeholder => "Haylie" %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, :placeholder => "name@mail.com"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %><br>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Enter password again" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div> <br>
<% end %>
</fieldset>
</form>

<%= render "devise/shared/links" %>
</div>
</div>