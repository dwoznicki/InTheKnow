<div class="container-fluid">
	<div class="row">
		<div class="text-right">
			<%= link_to "Add a tag", new_tag_path, class: 'btn btn-default' %>
			<%= link_to "Add a message", new_message_path, class: 'btn btn-default' %>
		</div>
	</div>	
	<h3>My Tags</h3>
	<!-- <div class="row"> -->
		<div class='my-tags'>
			<% current_user.tags.each do |tag| %>
				<%= link_to user_remove_tag_path(current_user, tag_id: tag.id) do %>
					<span class='btn btn-default'><%= tag.subject %> &times;</span>
				<% end %>
			<% end %>
		</div>
	<!-- </div> -->

	<h3>Other Tags</h3>
	<!-- <div class="row"> -->
		<div class="other-tags">
			<% @tags.each do |tag| %>
				<%= link_to user_add_tag_path(current_user, tag_id: tag.id) do %>
					<span class='btn btn-success'><%= tag.subject %> +</span>
				<% end %>
			<% end %>
		</div>
	<!-- </div> -->

	<div class="text-muted">
	<h2>My Messages</h2>

	<!-- <div class="row"> -->
		<% @messages.each do |message| %>
			<div>
				<% message.tags.each do |tag| %>
					<%= tag.subject %>
				<% end %>
				<%= message.body %>
			</div>
		<% end %>
	<!-- </div> -->
		</div>
	</div>
</div>